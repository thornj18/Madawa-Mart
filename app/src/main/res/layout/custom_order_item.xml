<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/drug_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="DRUG NAME: Paracetamol Tablets"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/pharmacy_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="FROM: JD Pharmarcy"
            android:textSize="12sp" />

    </LinearLayout>



    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STATUS: PENDING"
        android:textStyle="normal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/cast_libraries_material_featurehighlight_text_body_color"
        android:background="@color/colorAccent"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/order_status"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_alignParentEnd="true" />


</RelativeLayout>